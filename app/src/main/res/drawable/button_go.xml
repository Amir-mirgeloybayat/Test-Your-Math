<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:angle="90"
                      android:endColor="@color/button_go_color_green_end"
                      android:gradientRadius="150dp"
                      android:startColor="@color/button_go_color_green_start"
                      android:type="radial" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/button_go_color_green_start"
                android:endColor="@color/button_go_color_green_end"
                android:type="radial"
                android:angle="90"
                android:gradientRadius="75dp"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>

</selector>